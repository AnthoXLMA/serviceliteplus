  <body>
      <%= render 'shared/navbar' %>
      <%= render 'shared/flashes' %>
        <div class="banner">
          <!-- <div id="text-filant"></div> -->
          <div class="page-title">
            <h1>Lite Services</h1>
            <h2>Libérez vous des corvées digitales</h2>
              <p>Services informatiques à domicile</p>
              <p>Création & webdesign pour entreprises</p>
              <p>Agence de digitalisation</p>
          </div>
        </div>
      <%= yield %>
      <%= render 'shared/footer' %>
  </body>
</html>
